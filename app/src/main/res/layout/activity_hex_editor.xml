<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/hex_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:fastScrollEnabled="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerHorizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/hex_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="0"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="1"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="2"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="3"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="4"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="5"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="6"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="7"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/hex_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="8"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="9"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="A"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="B"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="C"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="?android:attr/borderlessButtonStyle"
                android:text="D"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="E"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/hex_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="F"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>